<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="horizontal"
                android:layout_weight="1"
                >

    <LinearLayout
        android:id="@+id/employeeLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="65dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/ivEmployeeAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_layout"
                android:padding="10dp"
                android:src="@drawable/def_avatar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓&#8195;&#8195;名:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/tvEmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="性&#8195;&#8195;别:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/tvEmployeeSex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="职&#8195;&#8195;位:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/tvEmployeePosition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电&#8195;&#8195;话:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/tvEmployeePhoneNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/memberLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="100px"
        android:layout_marginTop="40px"
        android:visibility="visible"

        android:weightSum="1"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ivMemberAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_layout"
                android:padding="10dp"
                android:src="@drawable/def_avatar" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓&#8195;&#8195;名:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电&#8195;&#8195;话:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvMemberPhoneNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardTypeLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"

                android:text="卡&#8194;类&#8194;型:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvCardType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardBalanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="余&#8195;&#8195;额:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvCardBalance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="56px"-->
        <!--android:layout_marginTop="56px"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/line_horizontal"/>-->

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/memberLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40px"
        android:visibility="visible"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/icon_cabinet" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="设备名称："
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_size" />

                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text=""
                    android:shadowColor="@color/black"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/tip_text_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/icon_case_no" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="存储箱号："
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_size" />

                <TextView
                    android:id="@+id/tvCaseNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:shadowColor="@color/black"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="2"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/tip_text_size" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:id="@+id/cardBalanceQuantityLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="剩余次数:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvCardBalanceQuantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="有&#8194;效&#8194;期:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvExpiry"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="70dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/signHintImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/success"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signHintImage"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="2"
                android:text="@string/sign_success"
                android:textColor="@color/white"
                android:textSize="@dimen/tip_text_size" />
        </LinearLayout>
</LinearLayout>