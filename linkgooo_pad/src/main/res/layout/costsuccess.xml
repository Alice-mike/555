<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/memberLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="70px"
        android:layout_marginRight="176px"
        android:layout_marginTop="40px"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivMemberAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_layout"
                android:padding="10dp"
                android:src="@drawable/def_avatar" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓&#8195;&#8195;名:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电&#8195;&#8195;话:"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/tvMemberPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="56px"
        android:layout_marginTop="56px"
        android:scaleType="fitXY"
        android:src="@drawable/line_horizontal"/>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/signHintImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="164px"
            android:scaleType="fitCenter"
            android:src="@drawable/success"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/cardCostLayot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signHintImage"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cose_success"
                android:textColor="@color/white"
                android:textSize="@dimen/tip_text_size" />

            <TextView
                android:id="@+id/tvCardCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/tip_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardBalanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardCostLayot"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/balance_after"
                android:textColor="@color/white"
                android:textSize="@dimen/tip_text_size" />

            <TextView
                android:id="@+id/tvCardBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/tip_text_size" />
        </LinearLayout>
    </RelativeLayout>



