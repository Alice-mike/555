<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/eliminatetemp"
    android:visibility="visible"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/em_lesson_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.2"
            android:layout_marginLeft="20px"
            android:layout_marginTop="192px"
            android:gravity="center_horizontal"
            android:text="请按图示放置手指"
            android:textColor="@color/black"
            android:textSize="40sp" />
        <FrameLayout
            android:layout_marginTop="42px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/em_lesson_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/finger_tip_level" />
            <ImageView
                android:id="@+id/failureImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/error_finger_bg"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74px"
        android:layout_marginRight="72px">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/teaching"
            android:visibility="visible"
            />
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:id="@+id/elm_member_message"
        android:orientation="vertical"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="570px"
        android:layout_height="376px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/menber_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:layout_marginLeft="28px"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menber_img"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="226px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="26px"
                    >
                    <TextView
                        android:id="@+id/lesson_menber_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张铁柱"
                        android:textColor="#ffffff"
                        android:textSize="40dp"/>
                    <TextView
                        android:id="@+id/lesson_menber_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="75px"
                        android:textColor="#ffffff"
                        android:textSize="40dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/lesson_menber_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="18566566566"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26px"
                android:layout_marginRight="26px">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menber_btn"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24px"
            android:layout_marginBottom="24px">
            <TextView
                android:id="@+id/lesson_menber_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="教练"
                android:textSize="32dp"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="122px">
            <Button
                android:id="@+id/lesson_menber_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ensure_btn"
                android:text="确认"
                android:textSize="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/successeliminate"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40px"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lesson_ok_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_gravity="center"
                android:textSize="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lessonLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1">-->
                <Button
                    android:layout_width="90px"
                    android:layout_height="160px"
                    android:id="@+id/up_lesson"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="77px"
                    android:background="@drawable/up_btn_bg"/>
                <!--</LinearLayout>-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                android:layout_weight="1"
                    android:layout_height="wrap_content"
                >
            <com.soonvein.cloud.ui.RollListView
                android:layout_width="730px"
                android:layout_height="600px"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:id="@+id/lessonmessageInfo" />
                </LinearLayout>
                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_weight="1">-->
                <Button
                    android:layout_width="90px"
                    android:layout_height="160px"
                    android:id="@+id/next_lesson"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="77px"
                    android:background="@drawable/next_btn_bge"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_bt_next"
                android:background="@drawable/ensure_btn"
                android:layout_marginTop="30px"
                android:text="确定"
                android:textSize="50dp"
                android:textColor="@color/white"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="680px"
            android:layout_height="510px"
            android:layout_marginTop="50px"
            android:background="@drawable/black_shape_layout"
            android:orientation="vertical"
            android:id="@+id/lessonmessage"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="170px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="会员信息"
                    android:layout_marginLeft="30px"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <View
                    android:layout_marginTop="25px"
                    android:layout_width="2px"
                    android:layout_marginLeft="30px"
                    android:layout_height="wrap_content"
                    android:background="#a0ffffff"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menber_img"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/elm_menber_name"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text=""
                            android:textSize="40dp"
                            android:layout_marginLeft="40px"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50px"
                            android:textColor="@color/white"
                            android:text=""
                            android:textSize="40dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="38px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/elm_menber_phone"
                        android:textColor="@color/white"
                        android:text=""
                        android:textSize="30dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#a0ffffff"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="170px"
                >
                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="教练信息"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <View
                    android:layout_width="2px"
                    android:layout_marginLeft="30px"
                    android:layout_height="wrap_content"
                    android:background="#a0ffffff"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menber_img"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/elm_coach_nam"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="40dp"
                            android:layout_marginLeft="40px"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#a0ffffff"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="170px"
                android:layout_weight="1">
                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="课程信息"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30px"
                    android:textSize="40dp"/>
                <View
                    android:layout_width="2px"
                    android:layout_marginLeft="30px"
                    android:layout_marginBottom="25px"
                    android:layout_height="wrap_content"
                    android:background="#a0ffffff"
                    />
                <LinearLayout
                    android:layout_marginLeft="50px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="课程名称："
                            android:textSize="30dp"/>
                        <TextView
                            android:textSize="30dp"
                            android:layout_marginLeft="20px"
                            android:id="@+id/elm_lesson_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textColor="@color/white"
                            android:text="日期："/>
                        <TextView
                            android:layout_marginLeft="20px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/elm_lesson_time"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/selectLesson"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lesson_ok_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_gravity="center"
            android:id="@+id/lesson_text"
            android:text="上课成功"
            android:textSize="50dp"/>
    </LinearLayout>
</LinearLayout>